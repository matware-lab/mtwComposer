<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.1" method="upgrade">
	<name>com_mtwcomposer</name>
	<author>Matias Aguirre</author>
	<authorEmail>maguirre@matware.com.ar</authorEmail>
	<authorUrl>http://www.matware.com.ar</authorUrl>
	<copyright>Copyright 2004 - 2016 Matware. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later.</license>
	<creationDate>2016-11-30</creationDate>
	<version>1.0.0</version>
	<description>Manage composer via Joomla! web administrator</description>

	<media destination="com_mtwcomposer" folder="media/com_mtwcomposer">
		<folder>css</folder>
		<folder>js</folder>
		<folder>phar</folder>
	</media>
	<administration>
		<menu img="class:joomlaupdate">COM_MTWCOMPOSER_OVERVIEW</menu>
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>mtwcomposer.php</filename>
			<filename>mtwcomposer.xml</filename>
			<folder>controllers</folder>
			<folder>sql</folder>
			<folder>views</folder>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/en-GB.com_mtwcomposer.ini</language>
			<language tag="en-GB">language/en-GB/en-GB.com_mtwcomposer.sys.ini</language>
		</languages>
	</administration>
</extension>
